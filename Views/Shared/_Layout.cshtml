<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Yaroshenko Shop</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        :root {
            --head-color: #6b007f;     /* Фиолетовый заголовков */
            --yellow-color: #ffe400;   /* Ярко-желтый */
            --back-color: #e666ff;     /* Светло-фиолетовый фон */
            --orange-color: #ff7600;   /* Оранжевый */
            --white-color: #f6f7fa;    /* Белый духа */
            --violet-color: #d600ff;   /* Ярко-фиолетовый */
        }
        
        body {
            background-color: var(--white-color);
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-top: 76px;
        }
        
        /* Навигационная панель */
        .navbar {
            background: linear-gradient(135deg, var(--head-color) 0%, var(--violet-color) 100%) !important;
            box-shadow: 0 4px 12px rgba(107, 0, 127, 0.2);
        }
        
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--yellow-color) !important;
        }
        
        .navbar-brand i {
            color: var(--orange-color);
        }
        
        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            transition: all 0.3s;
            border-radius: 4px;
            margin: 0 2px;
        }
        
        .nav-link:hover {
            color: var(--yellow-color) !important;
            background-color: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }
        
        .nav-link.active {
            color: var(--yellow-color) !important;
            background-color: rgba(214, 0, 255, 0.3);
        }
        
        .btn-primary {
            background: linear-gradient(45deg, var(--orange-color), #ff9500);
            border: none;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .btn-primary:hover {
            background: linear-gradient(45deg, #e66900, var(--orange-color));
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 118, 0, 0.3);
        }
        
        .btn-outline-primary {
            color: var(--orange-color);
            border-color: var(--orange-color);
        }
        
        .btn-outline-primary:hover {
            background-color: var(--orange-color);
            border-color: var(--orange-color);
            color: white;
        }
        
        /* Карточки игр */
        .game-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
            box-shadow: 0 6px 15px rgba(107, 0, 127, 0.08);
        }
        
        .game-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(107, 0, 127, 0.15);
        }
        
        .card-title {
            color: var(--head-color);
            font-weight: 700;
        }
        
        .card-text {
            color: #555;
        }
        
        /* Бейджи */
        .badge.bg-success {
            background-color: #28a745 !important;
        }
        
        .badge.bg-warning {
            background-color: var(--yellow-color) !important;
            color: #333;
        }
        
        .badge.bg-danger {
            background-color: #dc3545 !important;
        }
        
        .badge.bg-info {
            background: linear-gradient(45deg, var(--back-color), var(--violet-color));
            color: white;
        }
        
        .badge.bg-secondary {
            background-color: var(--head-color) !important;
            color: white;
        }
        
        /* Заголовки */
        h1, h2, h3, h4, h5 {
            color: var(--head-color);
        }
        
        h1 {
            border-bottom: 3px solid var(--yellow-color);
            padding-bottom: 10px;
            display: inline-block;
        }
        
        /* Цена */
        .price {
            color: var(--orange-color);
            font-weight: 700;
            font-size: 1.4rem;
        }
        
        /* Подвал */
        .footer {
            background: linear-gradient(135deg, var(--head-color) 0%, #520066 100%);
            color: white;
            margin-top: 60px;
            padding: 40px 0 20px;
        }
        
        .footer h5 {
            color: var(--yellow-color);
            margin-bottom: 20px;
        }
        
        .footer a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .footer a:hover {
            color: var(--yellow-color);
        }
        
        .social-links a {
            font-size: 1.5rem;
            margin-right: 15px;
        }
        
        /* Поиск */
        .form-control:focus {
            border-color: var(--violet-color);
            box-shadow: 0 0 0 0.25rem rgba(214, 0, 255, 0.25);
        }
        
        /* Алерты */
        .alert-info {
            background-color: rgba(230, 102, 255, 0.15);
            border-color: var(--back-color);
            color: var(--head-color);
        }
        
        /* Кастомные цвета для текста */
        .text-primary {
            color: var(--orange-color) !important;
        }
        
        .text-muted {
            color: #6c757d !important;
        }
        
        /* Анимации */
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        /* Акцентные элементы */
        .accent-border {
            border-left: 5px solid var(--yellow-color);
            padding-left: 15px;
        }
        
        /* Стили для малого количества ключей */
        .low-stock {
            position: relative;
        }
        
        .low-stock::after {
            content: "";
            position: absolute;
            top: -2px;
            right: -2px;
            width: 10px;
            height: 10px;
            background-color: var(--orange-color);
            border-radius: 50%;
            animation: pulse 1s infinite;
        }
        
        /* Кастомный скроллбар */
        ::-webkit-scrollbar {
            width: 10px;
        }
        
        ::-webkit-scrollbar-track {
            background: var(--white-color);
        }
        
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(var(--back-color), var(--violet-color));
            border-radius: 5px;
        }
    </style>
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Навигационная панель -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-gamepad me-2"></i>Магазин ключей
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Catalog")">
                            <i class="fas fa-list me-1"></i>Каталог
                        </a>
                    </li>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <i class="fas fa-user me-1"></i>@User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link">
                                        <i class="fas fa-sign-out-alt me-1"></i>Выйти
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Регистрация
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Войти
                                </a>
                            </li>
                        }
                    </ul>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item me-3">
                        <a class="nav-link position-relative" href="#">
                            <i class="fas fa-shopping-cart me-1"></i>Избранное
                            <span class="badge bg-danger position-absolute top-0 start-100 translate-middle pulse"
                                  style="background-color: var(--orange-color) !important;">
                                3
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light" href="#">
                            <i class="fas fa-user me-1"></i>Войти
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Основное содержимое -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Подвал -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5>
                        <i class="fas fa-gamepad me-2"></i>Магазин ключей
                    </h5>
                    <p>Премиальный магазин игровых ключей</p>
                    <div class="social-links mt-3">
                        <a href="#" class="me-3"><i class="fab fa-vk"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-telegram"></i></a>
                        <a href="#" class="me-3"><i class="fab fa-discord"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5><i class="fas fa-map-marker-alt me-2"></i>Навигация</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Catalog")">Каталог игр</a></li>
                        <li class="mb-2"><a href="#">Топ продаж</a></li>
                        <li class="mb-2"><a href="#">Скоро в продаже</a></li>
                        <li class="mb-2"><a href="#">Поддержка</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5><i class="fas fa-headset me-2"></i>Поддержка</h5>
                    <p>
                        <i class="fas fa-envelope me-2" style="color: var(--yellow-color);"></i>
                        support@yaroshenko.shop<br>
                        <i class="fas fa-phone me-2" style="color: var(--yellow-color);"></i>
                        +7 (XXX) XXX-XX-XX
                    </p>
                    <p class="mt-4 small">
                        <i class="fas fa-copyright me-1"></i>
                        2024 Yaroshenko Shop. Все права защищены.<br>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    @RenderSection("Scripts", required: false)
    
    <script>
        // Анимация для бейджа "мало ключей"
        document.addEventListener('DOMContentLoaded', function() {
            // Добавляем класс для анимации если ключей <= 3
            document.querySelectorAll('.badge').forEach(badge => {
                const text = badge.textContent.trim();
                if (text && !isNaN(text) && parseInt(text) <= 3) {
                    badge.classList.add('low-stock');
                }
            });
            
            // Обработка ошибок загрузки картинок
            document.querySelectorAll('img').forEach(img => {
                img.onerror = function() {
                    this.src = '/images/default-game.jpg';
                    this.alt = 'Изображение не найдено';
                    this.classList.add('img-error');
                };
            });
        });
    </script>
</body>
</html>