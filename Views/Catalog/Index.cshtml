@model IEnumerable<YaroshenkoShop.Controllers.CatalogController.GameViewModel>

@{
    ViewData["Title"] = "🎮 Каталог игр";
    Layout = "_Layout";
}

<div class="container mt-4">
    <!-- Заголовок с акцентом -->
    <div class="row mb-5">
        <div class="col-12">
            <h1 class="display-5 fw-bold" style="color: #6b007f;">
                <i class="fas fa-gamepad me-2" style="color: #ff7600;"></i>
                Каталог игр
                <span class="badge" style="background: linear-gradient(45deg, #ffe400, #ff7600); color: #333; font-size: 0.6em; vertical-align: middle;">
                    Лучшие предложения!
                </span>
            </h1>
            <p class="lead" style="color: #555;">
                Большой выбор игровых ключей по выгодным ценам
                <i class="fas fa-bolt ms-1" style="color: #d600ff;"></i>
            </p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" style="background-color: rgba(230, 102, 255, 0.15); border-color: #e666ff;">
            <h4><i class="fas fa-info-circle me-2"></i>Игр нет в наличии</h4>
            <p>Все ключи распроданы! Загляните позже или подпишитесь на уведомления.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 game-card">
                        <!-- Изображение игры -->
                        @if (!string.IsNullOrEmpty(game.ImageUrl))
                        {
                            <a href="@Url.Action("Details", new { id = game.Id })" class="position-relative">
                                <img src="/images/games/@game.ImageUrl"
                                     alt="@game.Title"
                                     class="card-img-top"
                                     style="height: 220px; object-fit: cover;">

                                <!-- Акцентный уголок -->
                                <div class="position-absolute top-0 end-0 bg-warning text-dark p-2"
                                     style="border-bottom-left-radius: 8px; background-color: #ffe400 !important;">
                                    <i class="fas fa-key"></i>
                                </div>

                                <!-- Если ключей мало - предупреждение -->
                                @if (game.AvailableKeys <= 3 && game.AvailableKeys > 0)
                                {
                                    <div class="position-absolute top-0 start-0 bg-danger text-white p-2"
                                         style="border-bottom-right-radius: 8px;">
                                        <small><i class="fas fa-exclamation-triangle"></i> Осталось: @game.AvailableKeys</small>
                                    </div>
                                }
                            </a>
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center"
                                 style="height: 220px; background: linear-gradient(135deg, #f6f7fa, #e8e9ec);">
                                <i class="fas fa-gamepad fa-3x" style="color: #d600ff;"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <!-- Заголовок -->
                            <h5 class="card-title fw-bold" style="color: #6b007f;">
                                @game.Title
                                @if (game.AvailableKeys == 0)
                                {
                                    <span class="badge bg-danger ms-2">Нет в наличии</span>
                                }
                            </h5>

                            <!-- Жанры -->
                            @if (game.Genres != null && game.Genres.Any())
                            {
                                <div class="mb-3">
                                    @foreach (var genre in game.Genres.Take(3))
                                    {
                                        <span class="badge me-1 mb-1"
                                              style="background: linear-gradient(45deg, #e666ff, #d600ff);">
                                            @genre
                                        </span>
                                    }
                                </div>
                            }

                            <!-- Краткое описание -->
                            <p class="card-text flex-grow-1 text-muted" style="font-size: 0.95rem;">
                                @if (!string.IsNullOrEmpty(game.Description))
                                {
                                    if (game.Description.Length > 120)
                                    {
                                        @game.Description.Substring(0, 120)

                                        <text>...</text>
                                    }
                                    else
                                    {
                                        @game.Description
                                    }
                                }
                            </p>

                            <!-- Информация -->
                            <div class="mt-auto">
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <p class="mb-1 small">
                                            <i class="fas fa-user-tie me-1" style="color: #6b007f;"></i>
                                            <strong>Разработчик:</strong>
                                        </p>
                                        <span class="text-muted small">@game.Developer</span>
                                    </div>
                                    <div class="col-6">
                                        <p class="mb-1 small">
                                            <i class="fas fa-calendar-alt me-1" style="color: #6b007f;"></i>
                                            <strong>Год:</strong>
                                        </p>
                                        <span class="text-muted small">@game.ReleaseYear</span>
                                    </div>
                                </div>

                                <!-- Ключи и цена -->
                                <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                    <div>
                                        <p class="mb-1 small">
                                            <strong>Ключей:</strong>
                                            <span class="badge @(game.AvailableKeys == 0 ? "bg-danger" :
                                                             (game.AvailableKeys > 5 ? "bg-success" : "bg-warning")) ms-2">
                                                @game.AvailableKeys
                                            </span>
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        @if (game.Price.HasValue)
                                        {
                                            <h5 class="price mb-0" style="color: #ff7600;">
                                                @game.Price.Value.ToString("C")
                                            </h5>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Цена не указана</span>
                                        }
                                    </div>
                                </div>

                                <!-- Кнопка -->
                                <div class="mt-3">
                                    <a href="@Url.Action("Details", new { id = game.Id })"
                                       class="btn w-100"
                                       style="background: linear-gradient(45deg, #6b007f, #d600ff); color: white; border: none;">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Подробнее
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Статистика внизу -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="p-4 rounded" style="background: linear-gradient(135deg, rgba(107, 0, 127, 0.05), rgba(230, 102, 255, 0.05)); border-left: 4px solid #ffe400;">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <h3 style="color: #6b007f;">@Model.Count()</h3>
                            <p class="text-muted">Игр в каталоге</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h3 style="color: #ff7600;">@Model.Sum(g => g.AvailableKeys)</h3>
                            <p class="text-muted">Всего ключей доступно</p>
                        </div>
                        <div class="col-md-4 mb-3">
                            <h3 style="color: #d600ff;">@Model.Count(g => g.AvailableKeys > 0)</h3>
                            <p class="text-muted">Игр в наличии</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>